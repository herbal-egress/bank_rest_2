<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- добавленный код: Определение модели POM версии 4.0.0 для Maven. -->
    <modelVersion>4.0.0</modelVersion>

    <!-- добавленный код: Группа проекта. -->
    <groupId>com.example</groupId>
    <!-- добавленный код: Артефакт проекта. -->
    <artifactId>bankcards</artifactId>
    <!-- добавленный код: Версия проекта. -->
    <version>0.0.1-SNAPSHOT</version>
    <!-- добавленный код: Тип упаковки — JAR. -->
    <packaging>jar</packaging>

    <!-- добавленный код: Имя проекта. -->
    <name>bankcards</name>
    <!-- добавленный код: Описание проекта. -->
    <description>REST API для управления банковскими картами</description>

    <!-- добавленный код: Родительский POM от Spring Boot для упрощения зависимостей и конфигурации. -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.4</version>
        <relativePath/>
    </parent>

    <!-- добавленный код: Свойства проекта, включая версию Java. -->
    <properties>
        <java.version>17</java.version>
    </properties>

    <!-- добавленный код: Зависимости проекта. -->
    <dependencies>
        <!-- добавленный код: Стартер для веб-приложений Spring Boot. -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <!-- добавленный код: Стартер для безопасности Spring Boot. -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>
        <!-- добавленный код: Стартер для работы с данными JPA. -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <!-- добавленный код: Драйвер PostgreSQL. -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>
        <!-- добавленный код: Liquibase для миграций БД. -->
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <!-- добавленный код: JJWT для работы с JWT. -->
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-api</artifactId>
            <version>0.12.6</version>
        </dependency>
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-impl</artifactId>
            <version>0.12.6</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-jackson</artifactId>
            <version>0.12.6</version>
            <scope>runtime</scope>
        </dependency>
        <!-- добавленный код: Springdoc для Swagger/OpenAPI. -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>2.6.0</version>
        </dependency>
        <!-- добавленный код: Стартер для тестов. -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <!-- добавленный код: Плагины сборки. -->
    <build>
        <plugins>
            <!-- добавленный код: Плагин Spring Boot для сборки исполняемого JAR. -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>