<?xml version="1.0" encoding="UTF-8"?>
<!-- добавленный код: Определяет корневой элемент POM для Maven проекта. -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- добавленный код: Указывает модель версии POM. -->
    <modelVersion>4.0.0</modelVersion>

    <!-- добавленный код: Группа проекта для уникальной идентификации. -->
    <groupId>com.example</groupId>
    <!-- добавленный код: Артефакт ID проекта. -->
    <artifactId>bankcards</artifactId>
    <!-- добавленный код: Версия проекта. -->
    <version>0.0.1-SNAPSHOT</version>
    <!-- добавленный код: Тип упаковки - JAR для исполняемого приложения. -->
    <packaging>jar</packaging>

    <!-- добавленный код: Название проекта для документации. -->
    <name>bank_rest</name>
    <!-- добавленный код: Описание проекта. -->
    <description>Система управления банковскими картами</description>

    <!-- добавленный код: Родительский POM от Spring Boot для управления зависимостями. -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.4</version>
        <relativePath/>
    </parent>

    <!-- добавленный код: Свойства проекта, включая версию Java. -->
    <properties>
        <java.version>17</java.version>
    </properties>

    <!-- добавленный код: Секция зависимостей. -->
    <dependencies>
        <!-- добавленный код: Стартер для веб-приложений Spring Boot (REST API). -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <!-- добавленный код: Стартер для безопасности (Spring Security + JWT). -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>
        <!-- добавленный код: Стартер для работы с БД (JPA, Hibernate). -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <!-- добавленный код: Драйвер PostgreSQL. -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>
        <!-- добавленный код: Liquibase для миграций БД. -->
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <!-- добавленный код: Swagger для документации API (OpenAPI 3). -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>2.6.0</version>
        </dependency>
        <!-- добавленный код: JWT библиотека для аутентификации. -->
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-api</artifactId>
            <version>0.12.6</version>
        </dependency>
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-impl</artifactId>
            <version>0.12.6</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-jackson</artifactId>
            <version>0.12.6</version>
            <scope>runtime</scope>
        </dependency>
        <!-- добавленный код: Стартер для тестов (JUnit, Mockito). -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- добавленный код: Тестирование безопасности. -->
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- добавленный код: Секция сборки. -->
    <build>
        <!-- добавленный код: Плагины для сборки. -->
        <plugins>
            <!-- добавленный код: Плагин Spring Boot для создания исполняемого JAR. -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>